<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="interfazfx.RegistroEstudianteControlador"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="10" vgap="5"
          stylesheets="@../estilos/registro.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="📝 Registro de Estudiante" styleClass="titulo"
           GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="campoNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label fx:id="errorNombre" textFill="red" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Primer Apellido:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="campoApellido1" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label fx:id="errorApellido1" textFill="red" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Segundo Apellido:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="campoApellido2" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label fx:id="errorApellido2" textFill="red" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Identificación:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="campoID" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Label fx:id="errorID" textFill="red" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Teléfono:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="campoTelefono" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    <Label fx:id="errorTelefono" textFill="red" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Label text="Correo electrónico:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
    <TextField fx:id="campoCorreo" GridPane.rowIndex="11" GridPane.columnIndex="1"/>
    <Label fx:id="errorCorreo" textFill="red" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

    <Label text="Dirección física:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
    <TextField fx:id="campoDireccion" GridPane.rowIndex="13" GridPane.columnIndex="1"/>
    <Label fx:id="errorDireccion" textFill="red" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

    <Label text="Organización laboral:" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
    <TextField fx:id="campoOrganizacion" GridPane.rowIndex="15" GridPane.columnIndex="1"/>
    <Label fx:id="errorOrganizacion" textFill="red" GridPane.rowIndex="16" GridPane.columnIndex="1"/>

    <Label text="Temas de interés (coma):" GridPane.rowIndex="17" GridPane.columnIndex="0"/>
    <TextField fx:id="campoTemas" GridPane.rowIndex="17" GridPane.columnIndex="1"/>
    <Label fx:id="errorTemas" textFill="red" GridPane.rowIndex="18" GridPane.columnIndex="1"/>

    <Label text="Contraseña:" GridPane.rowIndex="19" GridPane.columnIndex="0"/>
    <PasswordField fx:id="campoContrasena" GridPane.rowIndex="19" GridPane.columnIndex="1"/>
    <Label fx:id="errorContrasena" textFill="red" GridPane.rowIndex="20" GridPane.columnIndex="1"/>

    <Button fx:id="botonRegistrar"
            text="Registrar Estudiante"
            onAction="#registrarEstudiante"
            styleClass="boton"
            GridPane.rowIndex="21" GridPane.columnIndex="1"/>
</GridPane>
