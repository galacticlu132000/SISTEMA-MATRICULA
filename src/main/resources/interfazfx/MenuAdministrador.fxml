<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="interfazfx.MenuAdministradorControlador"
            stylesheets="@estilos/administrador.css">

    <top>
        <Label text="👨‍💼 Panel del Administrador"
               styleClass="titulo-principal"/>
    </top>

    <center>
        <TableView fx:id="tablaEstudiantes" prefHeight="400">
            <columns>
                <TableColumn fx:id="colID" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colCorreo" text="Correo" prefWidth="250"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER" styleClass="botonera">
            <Button text="➕ Registrar" onAction="#abrirRegistro" styleClass="boton-accion"/>
            <Button text="✏️ Modificar" onAction="#abrirModificacion" styleClass="boton-accion"/>
            <Button text="🗑️ Eliminar" onAction="#eliminarEstudiante" styleClass="boton-accion"/>
            <Button text="🔍 Ver Detalles" onAction="#verDetalles" styleClass="boton-accion"/>
        </HBox>
    </bottom>
</BorderPane>
