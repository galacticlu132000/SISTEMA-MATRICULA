<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="interfazfx.DetallesEstudianteControlador"
            stylesheets="@estilos/detalles.css"
            prefWidth="450" prefHeight="400">

    <top>
        <Label text="👤 Detalles del Estudiante"
               styleClass="titulo"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="🆔 ID:" styleClass="etiqueta" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lblID" styleClass="valor" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="📛 Nombre:" styleClass="etiqueta" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lblNombre" styleClass="valor" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="📧 Correo:" styleClass="etiqueta" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="lblCorreo" styleClass="valor" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="📞 Teléfono:" styleClass="etiqueta" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="lblTelefono" styleClass="valor" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="🏠 Dirección:" styleClass="etiqueta" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="lblDireccion" styleClass="valor" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="🏢 Organización:" styleClass="etiqueta" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="lblOrganizacion" styleClass="valor" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="📚 Temas:" styleClass="etiqueta" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <Label fx:id="lblTemas" styleClass="valor" wrapText="true" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="🗓️ Registro:" styleClass="etiqueta" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <Label fx:id="lblFecha" styleClass="valor" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <Button text="Cerrar" onAction="#cerrarVentana"
                styleClass="boton-cerrar"
                BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
